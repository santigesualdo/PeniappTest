<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.mobile.santige.nuevaaplicacion.ResultActivity"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="fill"
    android:id="@+id/activity_result">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/midLayout"
        android:layout_above="@+id/ibMenuBot"
        android:layout_below="@+id/ibMenu">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/v_scroll">
        </ScrollView>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ibMenu"
        android:layout_above="@+id/tableLay"
        android:layout_alignParentTop="true">

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/topText"
            android:textAlignment="center"
            android:textSize="18sp"
            android:background="@drawable/tytlestyle"
            android:padding="5dp"
            android:layout_margin="5dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ibMenuBot"
        android:weightSum="2"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="false"
            android:layout_alignParentBottom="false"
            android:id="@+id/tableLay">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:id="@+id/row1">

                <TextView
                    android:text="@string/monto_total"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/textoBottom"
                    android:layout_weight="1"
                    android:background="@color/common_action_bar_splitter"
                    android:layout_margin="10dp"
                    tools:ignore="HardcodedText"
                    android:textAlignment="center" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:id="@+id/row2"
                android:weightSum="2"
                android:layout_height="match_parent">

                <Button
                    android:text="@string/compartir"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/compartirButton"
                    android:layout_weight="1" />

                <Button
                    android:text="@string/guardar_peÃ±a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/guardarButton"
                    android:layout_weight="1" />
            </TableRow>

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/row3"
                android:weightSum="1">

                <Button
                    android:text="@string/volver_al_menu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/volverInicioButton"
                    android:layout_weight="1" />

            </TableRow>
        </TableLayout>
    </LinearLayout>

</RelativeLayout>